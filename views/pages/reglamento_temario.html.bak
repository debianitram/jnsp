{{extend 'layout.html'}}
<br>
<div class='row'>
    <div class='well well-small'>
        
        <h3>REGLAMENTO</h3>
        <hr class='bs-docs-separator' />

        <div class='row-fluid'>
            <div class="span12">
                
                <div class="accordion" id="accordion_reglamento">
                    {{for item in reglamento:}}
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion_reglamento" href={{="#collapse_%s" % item.id}}>
                                    <h4>{{=item.titulo}}</h4>
                                </a>
                            </div>
                            <div id={{="collapse_%s" % item.id}} class="accordion-body collapse">
                                <div class="accordion-inner">
                                    <div class='notice'>
                                        {{if auth.has_membership('administrador'):}}
                                             {{=A(I(_class='icon-pencil'), ' Editar', 
                                                  _href=URL(c='administracion', f='edit_rt', args=(item.id), user_signature=True))}}
                                             <hr class='bs-docs-separator' />
                                        {{pass}}
                                        {{=XML(item.cuerpo)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{pass}}
                </div>

            </div>
        </div>


        <h3>TEMARIO</h3>
        <hr class='bs-docs-separator' />

        <div class='row-fluid'>
            <div class="span12">
                
                <div class="accordion" id="accordion_temario">
                    {{for item in temario:}}
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion_temario" href={{="#collapse_%s" % item.id}}>
                                    <h4>
                                        {{=item.titulo}}
                                    </h4>
                                </a>
                            </div>
                            <div id={{="collapse_%s" % item.id}} class="accordion-body collapse">
                                <div class="accordion-inner">
                                    <div class='notice'>
                                        {{=XML(item.cuerpo)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{pass}}
                </div>

            </div>
        </div>


        <h3>NORMAS DE PROCEDIMIENTO</h3>
        <hr class='bs-docs-separator' />

        <div class='row-fluid'>
            <div class="span12">
                
                <div class="accordion" id="accordion_normas">
                    {{for item in normas:}}
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion_normas" href={{="#collapse_%s" % item.id}}>
                                    <h4>
                                        {{=item.titulo}}
                                    </h4>
                                </a>
                            </div>
                            <div id={{="collapse_%s" % item.id}} class="accordion-body collapse">
                                <div class="accordion-inner">
                                    <div class='notice'>
                                        {{=XML(item.cuerpo)}}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{pass}}
                </div>

            </div>
        </div>

    </div>
</div>
